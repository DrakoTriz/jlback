generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())
  nombre String
  apellidos String
  direccion String
  email String
  telefono String
  citas Cita[]
}

model Ciudad{
  id Int @id @default(autoincrement())
  nombre String
  precio_desplazamiento Float
  citas Cita[]
}

model Servicio{
  id Int @id @default(autoincrement())
  nombre String
  descripcion String?
  precio Float
  duracion_minutos Int
  citaServicios CitaServicio[]
}

model Cita {
  id         Int     @id @default(autoincrement())
  usuario    Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  ciudad     Ciudad  @relation(fields: [ciudadId], references: [id])
  ciudadId   Int
  fecha      DateTime
  hora_inicio DateTime
  hora_fin   DateTime
  total      Float
  servicios  CitaServicio[]
  createdAt  DateTime @default(now())
}

model CitaServicio {
  id            Int      @id @default(autoincrement())
  cita          Cita     @relation(fields: [citaId], references: [id])
  citaId        Int
  servicio      Servicio @relation(fields: [servicioId], references: [id])
  servicioId    Int
  precio        Float
  duracion_minutos Int
}
